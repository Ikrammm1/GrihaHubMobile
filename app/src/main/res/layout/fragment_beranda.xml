<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Biru4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Ui.Fragment.Beranda.BerandaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="10dp"
            android:background="@drawable/ellipseatas"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="23dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selamat Datang di GrihaHub"
                    android:textColor="@color/Kuning"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cardbiru1"
                    android:layout_marginTop="15dp"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/EdCari"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/White"
                        android:hint="Cari Layanan"
                        android:textColorHint="@color/White"
                        android:textSize="12dp"
                        android:fontFamily="@font/poppins_medium"
                        android:drawableEnd="@drawable/ic_search"
                        android:background="@color/Biru1"
                        android:drawablePadding="10dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Layanan Kami"
                    android:textColor="@color/Biru1"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="291dp"
                        android:layout_height="105dp"
                        android:background="@drawable/cardbiru3"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="61dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/kebersihan"/>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:gravity="center"
                           android:orientation="vertical">

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="Layanan Kebersihan"
                               android:gravity="center"
                               android:textColor="@color/Biru1"
                               android:textSize="12sp"
                               android:textStyle="bold"
                               android:fontFamily="@font/poppins_bold"/>

                           <Button
                               android:id="@+id/lihatKebersihan"
                               android:layout_width="wrap_content"
                               android:layout_height="30dp"
                               android:background="@drawable/btnkuning"
                               android:text="Lihat Semua"
                               android:textSize="12dp"
                               android:textAllCaps="false"
                               android:layout_marginTop="25dp"
                               android:textColor="@color/Biru1"
                               android:paddingStart="20dp"
                               android:paddingEnd="20dp"/>



                       </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="291dp"
                        android:layout_height="105dp"
                        android:background="@drawable/cardbiru3"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="61dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/elektronik"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Layanan Perbaikan Alat Elektronik "
                                android:gravity="center"
                                android:textColor="@color/Biru1"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins_bold"/>

                            <Button
                                android:id="@+id/lihatElektronik"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:background="@drawable/btnkuning"
                                android:text="Lihat Semua"
                                android:textSize="12dp"
                                android:textAllCaps="false"
                                android:textColor="@color/Biru1"
                                android:layout_marginTop="10dp"
                                android:paddingStart="20dp"
                                android:paddingEnd="20dp"/>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="291dp"
                        android:layout_height="105dp"
                        android:background="@drawable/cardbiru3"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="61dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/otomotif"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Layanan Perbaikan dan Perawatan Kendaraan"
                                android:gravity="center"
                                android:textColor="@color/Biru1"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins_bold"/>

                            <Button
                                android:id="@+id/lihatKendaraan"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:background="@drawable/btnkuning"
                                android:text="Lihat Semua"
                                android:textSize="12dp"
                                android:textAllCaps="false"
                                android:textColor="@color/Biru1"
                                android:layout_marginTop="10dp"
                                android:paddingStart="20dp"
                                android:paddingEnd="20dp"/>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>