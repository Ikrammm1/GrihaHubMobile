<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.Pembayaran.PembayaranActivity">

    <ImageView
        android:id="@+id/BtnBack"
        android:layout_width="11dp"
        android:layout_height="22dp"
        android:src="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:elevation="5dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ellipseatas"/>
    <LinearLayout
        android:id="@+id/cardkecil"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/cardkecil"
        android:layout_marginTop="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <TextView
            android:id="@+id/TxtTotal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Total   : Rp.170.000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/Biru1"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Metode pembayaran"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="51dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/Biru1"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@+id/cardkecil"/>

    <LinearLayout
        android:id="@+id/cardbesar"
        android:layout_width="match_parent"
        android:layout_height="296dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/cardbesar"
        android:layout_marginTop="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintTop_toBottomOf="@+id/subtitle">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">
            
            <ImageView
                android:id="@+id/BtnDana"
                android:layout_width="124dp"
                android:layout_height="32dp"
                android:src="@drawable/dana"/>
            <ImageView
                android:id="@+id/BtnOvo"
                android:layout_width="124dp"
                android:layout_height="32dp"
                android:src="@drawable/ovo"/>

            
        </LinearLayout>
        <LinearLayout
            android:id="@+id/BtnTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnwhite"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tranfer Bank"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/Black"
                android:fontFamily="@font/poppins_bold"/>
            
            <ImageView
                android:layout_width="21dp"
                android:layout_height="match_parent"
                android:src="@drawable/mdi_bank"
                android:layout_marginStart="5dp"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/BtnBayar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/btnkuning"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/cardbesar"
        android:layout_margin="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Biru1"
            android:textSize="20dp"
            android:text="Bayar"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>