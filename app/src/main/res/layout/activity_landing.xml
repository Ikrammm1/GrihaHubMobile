<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Biru4"
    tools:context=".Ui.Landing.Landing">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="25dp"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:src="@drawable/logo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GrihaHub"
            android:textColor="@color/Biru1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solusi Layanan Rumah Tepat \n untuk Kehidupan yang Padat"
            android:textColor="@color/Biru1"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"/>
        <Button
            android:id="@+id/btnDaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnkuning"
            android:layout_marginTop="20dp"
            android:text="Daftar"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/Biru1"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btnMasuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnkuning"
            android:layout_marginTop="20dp"
            android:text="Masuk"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/Biru1"
            android:textAllCaps="false"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="98dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/ellipsebawah"/>

</androidx.constraintlayout.widget.ConstraintLayout>